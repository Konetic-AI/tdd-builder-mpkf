{
  "template_name": "FinTech Starter",
  "template_version": "1.0.0",
  "description": "Pre-configured template for financial technology applications with SOC 2/PCI DSS compliance, audit logging, and segregation of duties",
  "tag_focus": ["security", "privacy", "compliance", "operations"],
  "complexity_recommendation": "comprehensive",
  "defaults": {
    "doc.version": "1.0.0",
    "deployment.model": "hybrid",
    "cloud.provider": "aws",
    "cloud.regions": ["us-east-1", "us-west-2"],
    "security.auth": ["mfa", "saml", "api-key"],
    "security.controls": [
      "encryption-at-rest",
      "encryption-in-transit",
      "audit-logging",
      "access-control",
      "vulnerability-scanning"
    ],
    "privacy.pii": true,
    "privacy.controls": [
      "data-masking",
      "anonymization",
      "right-to-deletion",
      "consent-management",
      "data-retention-policies"
    ],
    "privacy.regulations": ["pci-dss", "sox", "gdpr"],
    "compliance.soc2": true,
    "compliance.pci_dss": true,
    "compliance.sox": true,
    "compliance.audit_frequency": "quarterly",
    "operations.monitoring": ["metrics", "logging", "tracing", "alerting", "apm"],
    "operations.sla": "99.95",
    "operations.incident_response": true,
    "architecture.scale": "large",
    "architecture.style": "microservices",
    "security.audit_logging": "comprehensive",
    "security.audit_retention": "7-years",
    "security.log_immutability": true,
    "security.segregation_of_duties": true,
    "security.role_based_access": true,
    "security.least_privilege": true,
    "security.sensitive_data_handling": "encrypted",
    "financial.transaction_logging": "complete",
    "financial.reconciliation": "automated",
    "financial.fraud_detection": true,
    "financial.anti_money_laundering": true,
    "financial.kyc_required": true,
    "database.type": "postgresql",
    "database.encryption": "tde",
    "database.backup_frequency": "hourly",
    "database.backup_retention": "7-years",
    "database.point_in_time_recovery": true,
    "api.security": ["oauth2", "jwt", "api-key-rotation"],
    "api.rate_limiting": true,
    "network.segregation": true,
    "network.dmz": true,
    "network.firewall": "waf",
    "disaster_recovery.rto": "1-hour",
    "disaster_recovery.rpo": "15-minutes",
    "testing.security_testing": ["penetration", "vulnerability", "compliance"]
  },
  "skip_sections": [
    "marketing.analytics",
    "social.media"
  ],
  "recommended_questions": [
    "project.name",
    "project.description",
    "summary.problem",
    "summary.solution",
    "stakeholders_and_personas",
    "quality_goals",
    "constraints",
    "security.penetration_testing",
    "compliance.reporting",
    "incident.response_plan"
  ]
}

