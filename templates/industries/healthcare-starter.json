{
  "template_name": "Healthcare Starter",
  "template_version": "1.0.0",
  "description": "Pre-configured template for healthcare applications with PHI/PII protection, HIPAA compliance, and strict data retention",
  "tag_focus": ["security", "privacy", "compliance", "operations"],
  "complexity_recommendation": "comprehensive",
  "defaults": {
    "doc.version": "1.0.0",
    "deployment.model": "hybrid",
    "cloud.provider": "aws",
    "cloud.regions": ["us-east-1", "us-west-2"],
    "security.auth": ["mfa", "saml", "oauth2"],
    "security.controls": [
      "encryption-at-rest",
      "encryption-in-transit",
      "audit-logging",
      "access-control",
      "vulnerability-scanning"
    ],
    "privacy.pii": true,
    "privacy.phi": true,
    "privacy.controls": [
      "data-masking",
      "anonymization",
      "right-to-deletion",
      "consent-management",
      "data-retention-policies"
    ],
    "privacy.regulations": ["hipaa", "gdpr", "ccpa"],
    "compliance.hipaa": true,
    "compliance.hitech": true,
    "compliance.hipaa_baa_required": true,
    "compliance.audit_frequency": "annual",
    "operations.monitoring": ["metrics", "logging", "tracing", "alerting", "apm"],
    "operations.sla": "99.95",
    "operations.incident_response": true,
    "architecture.scale": "medium",
    "architecture.style": "microservices",
    "security.audit_logging": "comprehensive",
    "security.audit_retention": "6-years",
    "security.access_logs": "all-phi-access",
    "security.role_based_access": true,
    "security.minimum_necessary": true,
    "security.session_timeout": "15-minutes",
    "security.automatic_logoff": true,
    "phi.encryption": "aes-256",
    "phi.access_controls": "strict",
    "phi.transmission": "encrypted-only",
    "phi.storage": "encrypted",
    "phi.disposal": "secure-deletion",
    "phi.breach_notification": "required",
    "data.retention_period": "6-years",
    "data.destruction_policy": "certified",
    "data.backup_encryption": true,
    "patient.consent_management": true,
    "patient.access_rights": true,
    "patient.amendment_rights": true,
    "patient.accounting_disclosures": true,
    "user.background_checks": "required",
    "user.training": "hipaa-annual",
    "user.sanctions_policy": true,
    "vendor.baa_required": true,
    "vendor.risk_assessment": "comprehensive",
    "database.type": "postgresql",
    "database.encryption": "tde",
    "database.backup_frequency": "daily",
    "database.backup_retention": "6-years",
    "database.access_logging": true,
    "network.segregation": true,
    "network.dmz": true,
    "network.vpn_required": true,
    "network.firewall": "enterprise",
    "disaster_recovery.rto": "4-hours",
    "disaster_recovery.rpo": "1-hour",
    "disaster_recovery.testing_frequency": "annual",
    "testing.security_testing": ["penetration", "vulnerability", "compliance"]
  },
  "skip_sections": [
    "marketing.analytics",
    "social.media",
    "public.api"
  ],
  "recommended_questions": [
    "project.name",
    "project.description",
    "summary.problem",
    "summary.solution",
    "stakeholders_and_personas",
    "quality_goals",
    "constraints",
    "patient.portal",
    "ehr.integration",
    "telehealth.features"
  ]
}

