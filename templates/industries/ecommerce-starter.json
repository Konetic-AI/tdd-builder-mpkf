{
  "template_name": "E-Commerce Starter",
  "template_version": "1.0.0",
  "description": "Pre-configured template for e-commerce platforms with catalog management, inventory, checkout, payments, and anti-fraud",
  "tag_focus": ["business", "operations", "security", "architecture"],
  "complexity_recommendation": "standard",
  "defaults": {
    "doc.version": "1.0.0",
    "deployment.model": "cloud",
    "cloud.provider": "aws",
    "cloud.regions": ["us-east-1", "us-west-2", "eu-west-1"],
    "security.auth": ["oauth2", "basic-auth"],
    "security.controls": [
      "encryption-at-rest",
      "encryption-in-transit",
      "audit-logging",
      "access-control",
      "vulnerability-scanning"
    ],
    "privacy.pii": true,
    "privacy.controls": [
      "data-masking",
      "right-to-deletion",
      "consent-management"
    ],
    "privacy.regulations": ["gdpr", "ccpa", "pci-dss"],
    "operations.monitoring": ["metrics", "logging", "alerting", "apm"],
    "operations.sla": "99.9",
    "architecture.scale": "large",
    "architecture.style": "microservices",
    "catalog.product_management": true,
    "catalog.search_enabled": true,
    "catalog.search_type": "elasticsearch",
    "catalog.filtering": ["category", "price", "brand", "rating"],
    "catalog.recommendations": true,
    "catalog.image_optimization": true,
    "inventory.tracking": "real-time",
    "inventory.warehouse_management": true,
    "inventory.multi_warehouse": true,
    "inventory.low_stock_alerts": true,
    "inventory.reserve_on_checkout": true,
    "checkout.guest_checkout": true,
    "checkout.saved_addresses": true,
    "checkout.promo_codes": true,
    "checkout.tax_calculation": "automated",
    "checkout.shipping_calculator": true,
    "payments.providers": ["stripe", "paypal"],
    "payments.methods": ["credit-card", "debit-card", "digital-wallet"],
    "payments.pci_compliance": true,
    "payments.tokenization": true,
    "payments.3ds_enabled": true,
    "fraud.detection": true,
    "fraud.risk_scoring": true,
    "fraud.velocity_checks": true,
    "fraud.address_verification": true,
    "fraud.cvv_verification": true,
    "order.management": true,
    "order.status_tracking": true,
    "order.notifications": ["email", "sms"],
    "order.history": true,
    "shipping.integrations": ["ups", "fedex", "usps"],
    "shipping.tracking": true,
    "shipping.label_generation": true,
    "returns.enabled": true,
    "returns.rma_workflow": true,
    "customer.accounts": true,
    "customer.wishlists": true,
    "customer.reviews": true,
    "database.type": "postgresql",
    "database.replication": "master-replica",
    "cache.enabled": true,
    "cache.provider": "redis",
    "cdn.enabled": true,
    "cdn.provider": "cloudfront"
  },
  "skip_sections": [
    "datacenter.location",
    "internal.tools"
  ],
  "recommended_questions": [
    "project.name",
    "project.description",
    "summary.problem",
    "summary.solution",
    "stakeholders_and_personas",
    "quality_goals",
    "constraints",
    "peak.traffic_periods",
    "international.markets",
    "mobile.app_required"
  ]
}

