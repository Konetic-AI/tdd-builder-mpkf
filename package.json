{
  "name": "tdd-builder-mpkf",
  "version": "1.0.0",
  "description": "Enterprise-grade Technical Design Document generator compliant with MPKF standards",
  "main": "handlers/generate_tdd.js",
  "scripts": {
    "test": "node test_runner.js",
    "test:unit": "node tests/unit_test_runner.js",
    "test:simple": "node -e \"require('./test_runner').runTest('Simple', 'simple')\"",
    "test:startup": "node -e \"require('./test_runner').runTest('Startup', 'startup')\"",
    "test:enterprise": "node -e \"require('./test_runner').runTest('Enterprise', 'enterprise')\"",
    "test:mcp": "node -e \"require('./test_runner').runTest('MCP-Specific', 'mcp-specific')\"",
    "generate": "node cli.js",
    "test:audit": "node tests/test_generateAuditReports.js",
    "test:jest": "jest",
    "test:pdf": "jest tests/pdf_export.test.js",
    "build:simple": "node -e \"const h=require('./handlers/generate_tdd');(async()=>{const r=await h.validate_and_generate_tdd({project_data:require('./tests/sample_simple.json'), complexity:'simple'});console.log(r.status);})();\"",
    "build:startup": "node -e \"const h=require('./handlers/generate_tdd');(async()=>{const r=await h.validate_and_generate_tdd({project_data:require('./tests/sample_startup.json'), complexity:'startup'});console.log(r.status);})();\"",
    "build:enterprise": "node -e \"const h=require('./handlers/generate_tdd');(async()=>{const r=await h.validate_and_generate_tdd({project_data:require('./tests/sample_enterprise.json'), complexity:'enterprise'});console.log(r.status);})();\"",
    "build:mcp": "node -e \"const h=require('./handlers/generate_tdd');(async()=>{const r=await h.validate_and_generate_tdd({project_data:require('./tests/sample_mcp.json'), complexity:'mcp-specific'});console.log(r.status);})();\"",
    "build:all": "npm run build:simple && npm run build:startup && npm run build:enterprise && npm run build:mcp",
    "validate:microbuild": "node scripts/validate_microbuild.js",
    "validate:variables": "node scripts/validate_orphans.js",
    "prepare": "husky",
    "autopush": "./scripts/autopush.sh",
    "replit-sync": "./scripts/replit-sync.sh",
    "sync:fast": "bash scripts/sync_fast.sh"
  },
  "keywords": [
    "mcp",
    "tdd",
    "mpkf",
    "technical-design",
    "documentation",
    "enterprise",
    "architecture"
  ],
  "author": "MPKF Team",
  "license": "MIT",
  "engines": {
    "node": ">=18 <21"
  },
  "devDependencies": {
    "husky": "^9.1.0",
    "jest": "^30.2.0",
    "puppeteer": "^24.23.0",
    "rimraf": "^5.0.5"
  }
}
